<!-- views/menu.ejs -->
<%- include('partials/header') %>
<div class="container mx-auto px-6 py-8">
    <div id="menu-page-container">
        <h1 class="text-3xl font-bold">Menu at <span class="text-indigo-600"><%= canteen.name %></span></h1>
        <div class="mt-6 space-y-4">
            <% canteen.menu.forEach(item => { %>
                <div class="menu-item-row flex items-center justify-between bg-white p-4 rounded-lg shadow-sm border">
                    <div>
                        <h3 class="font-semibold"><%= item.name %></h3>
                        <p class="text-gray-600">â‚¹<%= item.price.toFixed(2) %></p>
                    </div>
                    <div class="flex items-center gap-3">
                        <button class="remove-from-cart-btn bg-red-100 text-red-700 font-bold w-8 h-8 rounded-full hover:bg-red-200 hidden" data-name="<%= item.name %>" data-price="<%= item.price %>">-</button>
                        <span class="item-quantity font-bold text-lg hidden" data-name="<%= item.name %>"></span>
                        <button class="add-to-cart-btn bg-indigo-100 text-indigo-700 font-bold w-8 h-8 rounded-full hover:bg-indigo-200" data-name="<%= item.name %>" data-price="<%= item.price %>">+</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<div class="sticky bottom-0 bg-white border-t-2 p-4 mt-8">
    <div class="container mx-auto flex justify-between items-center">
        <div>
            <h3 class="font-bold text-lg">Your Cart</h3>
            <p id="cart-summary" class="text-gray-600">No items added yet.</p>
        </div>
        <button id="checkout-btn" data-canteen-name="<%= canteen.name %>" class="px-8 py-3 bg-indigo-600 text-white font-bold rounded-lg hover:bg-indigo-700 disabled:bg-gray-400" disabled>Proceed to Checkout</button>
    </div>
</div>
<%- include('partials/footer') %>