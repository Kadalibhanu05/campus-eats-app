<%- include('partials/header') %>
<div class="container py-8">
    <div id="menu-page-container">
        <h1 class="text-3xl font-bold">Menu at <span class="text-indigo-600"><%= canteen.name %></span></h1>
        <div class="mt-6 gap-4 flex flex-col">
            <% canteen.menu.forEach(item => { %>
                <div class="menu-item-row flex items-center justify-between bg-white p-4 rounded-lg shadow-sm border">
                    <div>
                        <h3 class="font-semibold"><%= item.name %></h3>
                        <p class="text-gray-600">â‚¹<%= item.price.toFixed(2) %></p>
                    </div>
                    <div class="flex items-center gap-3">
                        <button class="remove-from-cart-btn btn-small" data-name="<%= item.name %>" data-price="<%= item.price %>">-</button>
                        <span class="item-quantity font-bold text-lg hidden" data-name="<%= item.name %>"></span>
                        <button class="add-to-cart-btn btn-small btn-outline" data-name="<%= item.name %>" data-price="<%= item.price %>">+</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
<div class="sticky-footer">
    <div class="container flex justify-between items-center">
        <div>
            <h3 class="font-bold text-lg">Your Cart</h3>
            <p id="cart-summary" class="cart-summary">No items added yet.</p>
        </div>
        <button id="checkout-btn" data-canteen-name="<%= canteen.name %>" class="btn" disabled>Proceed to Checkout</button>
    </div>
</div>
<%- include('partials/footer') %>
