<%- include('partials/header') %>
<section class="bg-white">
    <div class="container mx-auto px-6 py-24 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900">Craving something from the canteen?</h1>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">Get your favorite campus food delivered right to your block.</p>
        <div class="mt-8 max-w-2xl mx-auto">
            <form action="/canteens" method="GET" class="flex flex-col md:flex-row items-center gap-2">
                <div class="relative w-full">
                    <input type="text" name="university" list="university-list" placeholder="Enter your university name" class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" required>
                    <!-- This datalist uses the 'universities' variable, which is correct -->
                    <datalist id="university-list">
                        <% universities.forEach(uni => { %>
                            <option value="<%= uni %>">
                        <% }); %>
                    </datalist>
                </div>
                <button type="submit" class="w-full md:w-auto px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 shadow-md">Find Food</button>
            </form>
        </div>
    </div>
</section>
<%- include('partials/footer') %>
