<%- include('partials/header') %>
<div class="container max-w-2xl py-8">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center mb-6">Add Your Canteen</h2>
        <form id="add-canteen-form" class="space-y-6">
            <div>
                <label for="canteenName" class="block text-sm font-medium text-gray-700">Canteen Name</label>
                <input type="text" id="canteenName" class="input  w-full mt-1 block" />
            </div>
            <div>
                <label for="address" class="block text-sm font-medium text-gray-700">Address (Hostel Block, Building Name, etc.)</label>
                <input type="text" id="address" class="input w-full mt-1 block" />
            </div>
            <hr>
            <div id="food-items-container" class="space-y-4">
                <h3 class="text-lg font-medium">Menu Items</h3>
            </div>
            <button type="button" id="add-item-btn" class="btn-outline w-full">Add Food Item</button>
            <button type="submit" class="btn w-full">Submit Canteen</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
