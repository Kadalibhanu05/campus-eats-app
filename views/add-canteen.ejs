<%- include('partials/header') %>
<div class="container mx-auto px-6 py-8 max-w-2xl">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center mb-6">Add Your Canteen</h2>
        <!-- The form now has an ID for the JavaScript to find it -->
        <form id="add-canteen-form" class="space-y-6">
            <div>
                <label for="canteenName" class="block text-sm font-medium text-gray-700">Canteen Name</label>
                <input type="text" id="canteenName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm">
            </div>
            <!-- New Address Field -->
            <div>
                <label for="address" class="block text-sm font-medium text-gray-700">Address (Hostel Block, Building Name, etc.)</label>
                <input type="text" id="address" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm">
            </div>
            <hr>
            <!-- Container for dynamic menu items -->
            <div id="food-items-container" class="space-y-4">
                <h3 class="text-lg font-medium">Menu Items</h3>
                <!-- JavaScript will add item fields here -->
            </div>
            <!-- Button to add more menu items -->
            <button type="button" id="add-item-btn" class="w-full flex justify-center items-center px-4 py-2 border border-dashed border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                Add Food Item
            </button>
            <button type="submit" class="w-full px-6 py-3 font-semibold text-white bg-indigo-600 rounded-lg shadow-md">Submit Canteen</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
