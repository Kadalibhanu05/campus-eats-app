<%- include('partials/header') %>
<div class="container mx-auto px-6 py-8">
    <h1 class="text-3xl font-bold">Canteens at <span class="text-indigo-600"><%= university %></span></h1>
    <% if (canteens.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            <% canteens.forEach(canteen => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-transform duration-300">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold"><%= canteen.name %></h3>
                        <a href="/menu/<%= canteen.id %>" class="text-indigo-600 hover:underline mt-4 inline-block font-semibold">View Menu &rarr;</a>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="mt-6 text-gray-600">Sorry, no canteens found for this university yet.</p>
    <% } %>
</div>
<%- include('partials/footer') %>